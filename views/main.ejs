<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/head'); %>  
</head>

<div class="container">
  <header
    class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
    <div class="col-md-3 mb-2 mb-md-0">
      <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
        <h2 class="fw-semibold">Booknest</h2>
        <svg class="bi" width="40" height="32" role="img" aria-label="Bootstrap">
          <use xlink:href="#bootstrap" />
        </svg>
      </a>
    </div>

    <div class="dropdown text-end">
      <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
          <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
          <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
        </svg>  
      </a>
      <ul class="dropdown-menu text-small">
        <li><a class="dropdown-item" href="/login">Sign out</a></li>
      </ul>
    </div>
  </header>
</div>  

<body>
  
  <h2 class="text-center">Choose your destination</h2>
  <div class="album py-5 bg-body-tertiary">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% hotels.forEach(function(hotel) { %>
          <div class="col">
            <div class="card shadow-sm">
              <img class="bd-placeholder-img card-img-top" src="images/<%=hotel.id%>.jpg" width="100%" height="225"
               role="img" aria-label="Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">  
                <title>
                  <%= hotel.name %>
                </title>
                <rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em" ></text>
              </svg>
              <div class="card-body">
                <h3>
                  <%= hotel.name %>
                </h3>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <a class="btn btn-sm btn-outline-secondary" href="/reservation?hotel=<%= hotel.id %>">Book</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }); %>
      </div>
    </div>
  </div>
  </div>
</body>

</html>